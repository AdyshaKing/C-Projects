#include <iostream>
// rock_paper_scissors.cpp
int main (){

  int rock = 1, paper = 2, scissors = 3;
  int user = 0;
 
  std::cout << "PLease choise either rock, paper, or scissors \n";
  std::cin >> user;
  
  srand (time(NULL));
  
  int computer = rand() % 3 + 1;

  std::cout << computer << "\n";

  if (user == 1 && computer == 3){
    std::cout << "You win!";
  }
  else if (user == 2 && computer == 1){
    std::cout << "You win!";
  }
  else if (user == 3 && computer == 2){
    std::cout << "You win!";
  }
  else if (user == computer) {
    std::cout << "Tie!";
  }
  else {
    std::cout << "You lose\n";
  }

}
